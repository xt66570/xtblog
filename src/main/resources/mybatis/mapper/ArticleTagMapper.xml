<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xt.mapper.ArticleTagMapper">

    <!--article_tag的映射结果集-->
    <resultMap type="com.xt.entity.ArticleTag" id="ArticleTagMap">
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="tagId" column="tag_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--全部字段-->
    <sql id="allColumn"> article_id, tag_id </sql>

    <!--添加语句的字段列表-->
    <sql id="insertColumn">
        <if test="articleId != null and articleId != ''">
            article_id,
        </if>
        <if test="tagId != null and tagId != ''">
            tag_id,
        </if>
    </sql>

    <!--添加语句的值列表-->
    <sql id="insertValue">
        <if test="articleId != null and articleId != ''">
            #{articleId},
        </if>
        <if test="tagId != null and tagId != ''">
            #{tagId},
        </if>
    </sql>

    <!--通用对ArticleTag各个属性的值的非空判断-->
    <sql id="commonsValue">
        <if test="articleId != null and articleId != ''">
            article_id = #{articleId},
        </if>
        <if test="tagId != null and tagId != ''">
            tag_id = #{tagId},
        </if>
    </sql>

    <!--新增article_tag:哪个字段不为空就添加哪列数据,返回自增主键-->
    <insert id="insert">
        insert into article_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"/>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"/>
        </trim>
    </insert>

    <!--删除article_tag:通过主键-->
    <delete id="deleteById">
        delete from article_tag
        <where>
            article_id = #{articleId}
        </where>
    </delete>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ArticleTagMap">
        select
        <include refid="allColumn"></include>
        from article_tag
        where article_id = #{articleId} and tag_id = #{tagId}
    </select>

    <!--根据标签ID获取关联文章的数量-->
    <select id="getArticleCount" resultType="java.lang.Integer">
        select count(*) from article_tag where tag_id = #{id}
    </select>

    <!--根据文章ID查询所有标签-->
    <select id="queryByArticleId" resultType="com.xt.entity.Tag">
        select t.name,t.id from tag t
        left join article_tag `at` on t.id = `at`.tag_id where `at`.article_id=#{id};
    </select>


</mapper>